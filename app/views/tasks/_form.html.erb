<div class="container mt-2 ">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card p-4 mb-4 rounded">
        <%= form_with(model: @task, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :title, class: "form-label fw-bold" %>
            <%= f.text_field :title, class: "form-control", placeholder: "Enter task title" %>
          </div>

          <div class="mb-3">
            <%= f.label :description, class: "form-label fw-bold" %>
            <%= f.text_area :description, rows: 3, class: "form-control", placeholder: "Enter task details..." %>
          </div>

          <div class="form-check mb-3">
            <%= f.check_box :completed, class: "form-check-input" %>
            <%= f.label :completed, class: "form-check-label" %>
          </div>

          <div class="d-grid">
            <%= f.submit "ðŸ’¾ Save Task", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>